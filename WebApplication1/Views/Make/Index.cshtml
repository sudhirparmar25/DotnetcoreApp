@model IEnumerable<WebApplication1.Models.Make>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Bikes";
    Layout = "_Layout";
}

<h2>Bikes</h2>
<div class="row col-md-8">
    <div class="col-6">
        <h2 class="text-info">Makes of vehicle</h2>
    </div>
    <div class="col-6">
        <a class="btn btn-primary" asp-action="Add">Add New Make </a>
    </div>
    <br />
    <table class="table table-striped border">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayName(item.Name)</td>
                    <td class="text-right">
                        <div class="btn-group" role="group">
                            <a asp-controller="Make"
                               asp-action="Update"
                               asp-route-id="@item.Id" class="btn btn-primary">
                                Edit
                            </a>
                            @*<input type="button" class="btn btn-primary" asp-route-id="@item.Id" asp-action="Update" value="Update" />*@
                            <form method="post" action="Delete">
                                <button type="submit" class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete"
                                        onclick="if (!confirm('Are you sure you want to delete this make?')) { return false }"
                                        >Delete</button>
                            </form>

                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>