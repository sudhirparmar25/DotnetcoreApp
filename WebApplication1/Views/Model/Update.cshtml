@model WebApplication1.Models.ViewModel.ModeViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Update Model";
    Layout = "_Layout";
}

<h2>Update</h2>
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Webapp/js/Add.js"></script>
</head>
<form action="/Model/Update" method="post">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-2">
            <select asp-for="Model.MakeId" asp-items="Model.CSelectListItem(Model.Makes)"></select>
        </div>
    </div>
    <div>
        <input asp-for="Model.Id" class="form-control" type="hidden"/>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>
        <div class="col-2">
            <input asp-for="Model.Name" class="form-control" /><span id="errorUpdateModel"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="form-group">
            <input type="submit" id="btnUpdateModel" name="Submit" class="btn btn-primary" value="Update" />
        </div>
    </div>
</form>


